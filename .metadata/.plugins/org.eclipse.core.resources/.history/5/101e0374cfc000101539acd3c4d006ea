package com.app.controllers;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.core.env.Environment;
import org.springframework.web.bind.annotation.RestController;

import com.app.models.entity.Cliente;
import com.app.models.service.IClienteService;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;


@RestController
public class ClienteController {
	@Autowired
    private IClienteService clienteService;
	
	@Autowired
	private Environment env;
	
	@Value("${server.port}")
	private Integer port;
	
	
	@GetMapping("/clientes")
	public List<Cliente> getAll(@RequestParam(required = false) String nombre){
    if (nombre != null && !nombre.isEmpty()) {
        return clienteService.findByName(nombre);
    }
    return clienteService.findAll().stream().map(paciente -> {
    	paciente.setPort(Integer.parseInt(env.getProperty("local.server.port")));
		return paciente;
	}).collect(Collectors.toList());
	}
	

}
